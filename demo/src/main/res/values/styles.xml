<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="calibrate_button_style" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:longClickable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="calibrate_button_inc_style" parent="calibrate_button_style">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:text">+</item>
    </style>

    <style name="calibrate_button_dec_style" parent="calibrate_button_style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:text">-</item>
    </style>

    <style name="calibrate_seek_bar_style" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
